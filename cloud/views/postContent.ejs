<div id="post-content">
	<h3><%=post.get('postTitle')%></h3>
	<div><%-post.get('postContent')%></div>
	<p class="text-right docs-comment-time"><small><%=post.createdAt%></small></p>
</div>
<div id="post-comment">
	<h3 class="page-header">Comments</h3>
	<% if(comments) { %>
	<% comments.forEach(function (comment) { %>
	<div class="panel panel-default">
	<div class="panel-body media">
		<a class="media-left">
			<img class="img-thumbnail-me" src="/img/img3.jpg" alt="head icon" style="width: 64px; height: 64px;">
		</a>
		<div class="media-body">
			<h4 class="media-heading"><%=comment.get('commentAuthor')%></h4>
			<p><%=comment.get('commentContent')%></p>
		</div>
		<p class="text-right docs-comment-time"><small><%=comment.createdAt%></small></p>
	</div>
	</div>
	<% })
	} %>
	<% if(!comments[0]) { %>
		<p>There is no comment.</p>
	<% } %>
	<div class="panel panel-default">
	<div class="panel-body">
	<form class="form" role="login" name="comment" action="/comment/<%=post.get('postId')%>" method="post" onsubmit="return validateComment()">
		<div class="form-group">
			<input type="username" class="form-control" name="author" placeholder="Name (required)">
		</div>
		<div class="form-group">
			<input type="email" class="form-control" name="email" placeholder="Email">
		</div>
		<div class="form-group">
			<textarea class="form-control" rows="3" name="content" placeholder="Write your comment (required)"></textarea>
		</div>
		<button type="submit" class="btn btn-default">Submit</button>
	</form>
	</div>
	</div>
</div>
